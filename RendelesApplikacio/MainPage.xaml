<Page x:Class="OrderManagementApp.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="MainPage">
    <Grid>
        <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled" Margin="10,10,10,60">
            <StackPanel Name="OrdersList">
            </StackPanel>
        </ScrollViewer>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="10">
            <Button Content="Manage Orders" Width="120" Margin="5" Click="Button_Click"/>
            <Button Content="Add Orders" Width="120" Margin="5" Click="AddOrders_Click"/>
        </StackPanel>
    </Grid>
</Page>
