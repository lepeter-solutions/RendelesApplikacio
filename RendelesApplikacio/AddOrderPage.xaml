<Page x:Class="OrderManagementApp.AddOrderPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="AddOrderPage">
    <Grid Margin="10">
        <StackPanel>
            <Button Content="Back" Margin="5" Width="100" HorizontalAlignment="Left" Click="BackButton_Click"/>

            <TextBlock Text="Add New Order" FontSize="24" FontWeight="Bold" Margin="5" HorizontalAlignment="Center"/>

            <TextBlock Text="Customer Name:" Margin="5"/>
            <TextBox Name="CustomerName" Margin="5" Width="300" />

            <TextBlock Text="Order Address:" Margin="5"/>
            <TextBox Name="OrderAddress" Margin="5" Width="300" />

            <TextBlock Text="Ordered Item:" Margin="5"/>
            <TextBox Name="OrderedItem" Margin="5" Width="300" />

            <TextBlock Text="Amount:" Margin="5"/>
            <TextBox Name="Amount" Margin="5" Width="100" />

            <TextBlock Text="Order Date:" Margin="5"/>
            <DatePicker Name="OrderDate" Margin="5" Width="200" />

          
            <Button Content="Submit Order" Margin="5" Width="150" HorizontalAlignment="Left" Click="SubmitOrder_Click"/>

          
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="5">
                <Button Content="Export JSON" Margin="5" Width="150" Click="ExportJson_Click"/>
                <Button Content="Import JSON" Margin="5" Width="150" Click="ImportJson_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
